<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/history_list_item_weight_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textStyle="bold"
        tools:text="Weight" />

    <TextView
        android:id="@+id/history_list_item_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/history_list_item_weight_text_view"
        android:layout_alignBottom="@+id/history_list_item_weight_text_view"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="200dp"
        android:layout_toEndOf="@+id/history_list_item_weight_text_view"
        android:layout_toRightOf="@+id/history_list_item_weight_text_view"
        android:padding="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        tools:text="Recorded Date" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/history_list_item_date_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/history_list_item_date_text_view"
        android:layout_toRightOf="@+id/history_list_item_date_text_view"
        android:padding="0dp"
        android:text="X" />
</RelativeLayout>